pipeline {
    agent any
    stages{
        stage('Deploy CloudFormation Stack') {
            steps {
                    withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', accessKeyVariable: "AKIAT5FXCZCMT7FHPVUS", secretKeyVariable: "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"]]) {
                        sh '''
                            aws cloudformation create-stack --stack-name my-stack --template-body file://cf.yml --region us-east-2
                        '''
                }
            }
        }
    }
}